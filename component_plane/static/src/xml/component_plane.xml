<template>
    <div t-name="ComponentPlaneView" class="container-fluid o_cplane_container">
        <div class="row">

            <div class="o_cplane_sidebar_container col-sm-3 hidden-xs"/>
            <div class="col-sm-9">
                <div class="o_cplane-control-panel">
                    <div class="o_cplane-cp-buttons"/>
                </div>
                <div class="o_cplane_view">
                    <div class="map" style="width:200;height:200"><p>Para poner algo</p></div>
                </div>
            </div>
        </div>
    </div>

    <t t-name="ComponentPlaneView.sidebar">
        <div class="o_cplane_sidebar">
            <div class="o_cplane_mini"/>
            <div class="o_cplane_filter">
                <h3 t-if="widget.getParent().color_string"><t t-esc="widget.getParent().color_string"/></h3>
            </div>
        </div>
    </t>

    <t t-name="ComponentTypeSelectDialog">
        <div t-foreach='component_types' t-as='type'>
            <input type="radio" name="type_select" t-att-value='type.model'/>
            <t t-esc="type.title"/>
        </div>
    </t>
</template>