<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="action_components" model="ir.actions.act_window">
            <field name="name">Components</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">component.component</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <!-- Top menu item -->
        <menuitem name="Components"
            id="base.menu_component_root"
            sequence="80"/>

<!--        <menuitem name="Components"
            action="action_components"
            id="menu_components"
            parent="base.menu_test_root"
            groups="component.group_component_component_customer"
            sequence="9"/>-->



        <!-- Component item -->
        <menuitem name="Components by type"
                  action="action_components"
                  id="menu_components_components"
                  parent="base.menu_component_root"
                  groups="component.group_component_component_customer"
                  sequence="100"/>

        <!-- Component menu -->
        <menuitem name="Components by type"
            id="menu_maintenance_components"
            parent="base.menu_component_root"
            groups="component.group_component_component_customer"
            sequence="9"/>

        <!-- Component Tree View  -->
        <record id="components_tree_view" model="ir.ui.view">
            <field name="name">component.component.tree</field>
            <field name="model">component.component</field>
            <field name="arch" type="xml">
                <tree string="Component">
                    <field name="component_number"/>
                    <field name="name"/>
                    <field name="criticality"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <!-- Component Form View  -->
        <record id="components_form_view" model="ir.ui.view">
            <field name="name">component.component.form</field>
            <field name="model">component.component</field>
            <field name="arch" type="xml">
                <form string="Components" version="7.0">
                    <header>
                        <field name="maintenance_state_id" widget="statusbar" clickable="True" groups="component.group_component_component_user"/>
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                        </div>
                        <field name="image_medium" widget="image" class="oe_avatar oe_left"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <group>

                            <h1>
                                <field name="name"/>
                            </h1>
                                <field name="electric_component_type"/>
                            </group>
                            <field name="category_ids" widget="many2many_tags" locationholder="Tags..."/>
                            <field name="electric_component_type"/>
                        </div>
                        <group>
                            <field name="site_id"/>
                            <field name="location_id" domain="[('site_id','=',site_id)]"/>
                        </group>
                        <group>
                            <group>
                                <field name="criticality"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
<!--
                            <group>
                                <div class="oe_kanban_bottom_left oe_margin_top_4">
                                    <a t-if="record.attachment_number" name="action_get_attachment_tree_view" type="object"> <field name="attachment_number"/> Documents</a>
                                </div>
                                <div class="oe_kanban_bottom_right oe_margin_top_4">
                                    <a t-if="record.test_count" name="action_get_test_tree_view" type="object"> <field name="test_count"/> TestsOOOOOOOO</a>
                                </div>
                            </group>
-->

                        </group>
                        <notebook>
                            <page name="info" string="Info">
                                <group>
                                    <group>
                                        <field name="component_number"/>
                                        <field name="model"/>
                                        <field name="serial"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <group string="Warranty">
                                    <group>
                                    <field name="manufacturer_id"/>
                                    <field name="start_date"/>
                                    <field name="warranty_start_date"/>
                                    </group>
                                    <group>
                                    <field name="vendor_id"/>
                                    <field name="purchase_date"/>
                                    <field name="warranty_end_date"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                     </sheet>
                     <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Component Kanban View  -->
        <record model="ir.ui.view" id="components_kanban_view">
            <field name="name">Component Kanban</field>
            <field name="model">component.component</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="maintenance_state_id"/>
                    <field name="maintenance_state_color"/>
                    <field name="user_id"/>
                    <field name="criticality"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette">
                                <div class="codup_kanban_left">
                                    <a type="open"><img t-att-src="kanban_image('component.component', 'image_small', record.id.value)" class="oe_kanban_image"/></a>
                                    <div t-attf-title="#{record.maintenance_state_id.value}" t-attf-class="codup_status_color_#{record.maintenance_state_color.raw_value} codup_status"></div>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>Model: <field name="model"></field></li>
                                        <li>Manufacturer: <field name="manufacturer_id"></field></li>
                                        <li>Serial No: <field name="serial"></field></li>
                                        <li class="codup_kanban_info">
                                        <a t-if="record.criticality.raw_value == 0" t-attf-title="#{record.criticality.value}" class="codup_attention_off"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value gt 0" t-attf-title="#{record.criticality.value}" class="codup_attention_on"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value lte 1" t-attf-title="#{record.criticality.value}" class="codup_attention_off"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value gt 1" t-attf-title="#{record.criticality.value}" class="codup_attention_on"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value lte 2" t-attf-title="#{record.criticality.value}" class="codup_attention_off"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value gt 2" t-attf-title="#{record.criticality.value}" class="codup_attention_on"><span class="fa fa-exclamation-triangle"/></a>
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar"/>
                                        </li>
                                    </ul>
                                    <group name="detail">
                                        <group name="basic">
                                            <ul>
                                                <li>Type: <field name="electric_component_type"></field></li>
                                                <li>Model: <field name="model"></field></li>
                                                <li>Manufacturer: <field name="manufacturer_id"></field></li>
                                                <li>Serial No: <field name="serial"></field></li>
                                            </ul>
                                        </group>
                                        <group name="extended">
                                            <li>Electric info: <field name="electric_info"></field></li>
                                        </group>
                                    </group>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Component Search  -->
        <record model="ir.ui.view" id="components_search">
            <field name="name">Component Search</field>
            <field name="model">component.component</field>
            <field name="arch" type="xml">
                <search string="Component Search">
                    <field name="component_number"/>
                    <field name="name"/>
                    <field name="criticality"/>
                    <field name="user_id"/>
                    <field name="category_ids"/>
                    <separator />
                    <group expand="0" string="Group By">
                      <filter name="group_name"
                              string="Name"
                              context="{'group_by': 'name'}"
                              />
                      <filter name="group_user"
                              string="User"
                              context="{'group_by': 'user_id'}"
                              />
                    </group>
                </search>
            </field>
        </record>


        <!--

        <record model="ir.actions.act_window.view" id="action_components_kanban_view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="components_kanban_view"/>
            <field name="act_window_id" ref="action_components"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_components_tree_view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="components_tree_view"/>
            <field name="act_window_id" ref="action_components"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_components_form_view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="components_form_view"/>
            <field name="act_window_id" ref="action_components"/>
        </record>

        &lt;!&ndash; Component item &ndash;&gt;
        <menuitem name="Components"
            action="action_components"
            id="menu_maintenance_components_components"
            parent="menu_maintenance_components"
            groups="component.group_component_component_customer"
            sequence="100"/>
-->

        <!-- Management Component Kanban View  -->
        <record model="ir.ui.view" id="management_components_kanban_view">
            <field name="name">Manage states Component Kanban</field>
            <field name="model">component.component</field>
            <field name="arch" type="xml">
                <kanban default_group_by="maintenance_state_id" create="false" delete="false">
                    <field name="maintenance_state_id"/>
                    <field name="maintenance_state_color"/>
                    <field name="user_id"/>
                    <field name="criticality"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card codup_kanban_status oe_kanban_global_click">
                                <div class="codup_kanban_left">
                                    <a type="open"><img t-att-src="kanban_image('component.component', 'image_small', record.id.value)" class="oe_kanban_image"/></a>
                                    <div t-attf-title="#{record.maintenance_state_id.value}" t-attf-class="codup_status_color_#{record.maintenance_state_color.raw_value} codup_status"></div>
                                </div>
                                <div class="codup_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li title="Model"><field name="model"></field></li>
                                        <li title="Manufacturer"><field name="manufacturer_id"></field></li>
                                        <li class="codup_kanban_info">
                                        <a t-if="record.criticality.raw_value == 0" t-attf-title="#{record.criticality.value}" class="codup_attention_off"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value gt 0" t-attf-title="#{record.criticality.value}" class="codup_attention_on"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value lte 1" t-attf-title="#{record.criticality.value}" class="codup_attention_off"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value gt 1" t-attf-title="#{record.criticality.value}" class="codup_attention_on"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value lte 2" t-attf-title="#{record.criticality.value}" class="codup_attention_off"><span class="fa fa-exclamation-triangle"/></a>
                                        <a t-if="record.criticality.raw_value gt 2" t-attf-title="#{record.criticality.value}" class="codup_attention_on"><span class="fa fa-exclamation-triangle"/></a>
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_management_components" model="ir.actions.act_window">
            <field name="name">Manage states</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">component.component</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_management_components_kanban_view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="management_components_kanban_view"/>
            <field name="act_window_id" ref="action_management_components"/>
        </record>

        <!-- Management Component item -->
        <menuitem name="Manage states"
            action="action_management_components"
            id="menu_maintenance_components_management"
            parent="menu_maintenance_components"
            groups="component.group_component_component_user"
            sequence="100"/>

        <!-- Report menu -->
        <menuitem name="Reports"
            id="menu_maintenance_report"
            parent="base.menu_component_root"
            groups="component.group_component_component_customer"
            sequence="30"/>

        <!-- Configuration menu -->
        <menuitem name="Configuration"
            id="menu_maintenance_config"
            parent="base.menu_component_root"
            groups="component.group_component_component_manager"
            sequence="200"/>
            
        <!-- Component State Form View  -->
        <record id="component_state_form_view" model="ir.ui.view">
            <field name="name">component.state.form</field>
            <field name="model">component.state</field>
            <field name="arch" type="xml">
                <form string="State" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" class="oe_inline"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="state_color"/>
                                <field name="team"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Component State Kanban View  -->
        <record model="ir.ui.view" id="component_state_kanban_view">
            <field name="name">Component State Kanban</field>
            <field name="model">component.state</field>
            <field name="arch" type="xml">
                <kanban default_group_by="team">
                    <field name="name"/>
                    <field name="team"/>
                    <field name="state_color"/>
                    <field name="sequence" widget="handle"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card codup_kanban_status oe_kanban_global_click">
                                <h4>
                                <a name="change_color" string="Change color" type="object"><span t-attf-class="codup_status_color_#{record.state_color.raw_value} codup_status"></span></a>
                                <field name="name"/>
                                </h4>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_component_state" model="ir.actions.act_window">
            <field name="name">Component States</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">component.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
        </record>

        <!-- Component state item -->
        <menuitem name="Component States"
            action="action_component_state"
            id="menu_component_state"
            parent="menu_maintenance_config"
            groups="component.group_component_component_manager"
            sequence="100"/>

        <!-- Component Tags Tree View -->
        <record id="component_category_tree_view" model="ir.ui.view">
            <field name="name">component.category.tree</field>
            <field name="model">component.category</field>
            <field name="arch" type="xml">
                <tree string="Component Tags" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_component_category" model="ir.actions.act_window">
            <field name="name">Component Tags</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">component.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- Component Tags item -->
        <menuitem name="Component Tags"
            action="action_component_category"
            id="menu_component_category"
            parent="menu_maintenance_config"
            groups="component.group_component_component_manager"
            sequence="100"/>

 	</data>
</openerp>
